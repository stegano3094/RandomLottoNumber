<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stegano.randomlottonumber">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_ste"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_ste"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomLottoNumber">

        <activity android:name=".ResultActivity" android:theme="@style/AppTheme.Result" android:parentActivityName=".MainActivity"/>
        <activity android:name=".NameActivity" android:theme="@style/AppTheme.Name"/>
        <activity android:name=".ConstellationActivity" android:theme="@style/AppTheme.Constellation"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>